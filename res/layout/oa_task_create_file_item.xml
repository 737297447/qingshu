<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/task_create_file_single_top"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/oa_divider_color"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/item_maintain_infoLI"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/item_maintain_info_image"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:scaleType="centerCrop"
                android:src="@drawable/oa_inputbox_voice_press" >
            </ImageView>

            <TextView
                android:id="@+id/item_voice_time"
                style="@style/oa_layout_style"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="10sp" >
            </TextView>
        </RelativeLayout>

        <EditText
            android:id="@+id/item_maintain_infoED"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dip"
            android:layout_toLeftOf="@+id/madintain_info_detele"
            android:layout_toRightOf="@id/item_maintain_infoLI"
            android:background="@color/white"
            android:maxHeight="45dip"
            android:maxLength="25"
            android:minHeight="45dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/madintain_info_detele"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/oa_but_maintain_del" />
    </RelativeLayout>

    <TextView
        android:id="@+id/task_create_file_single"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/oa_divider_color" />

</LinearLayout>